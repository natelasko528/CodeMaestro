{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run CodeMaestro Extension (MVP)",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "${workspaceFolder}/.."
      ],
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "preLaunchTask": "Build server + extension"
    }
  ]
}
